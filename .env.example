# API Keys - Copy this file to .env and fill in your values
# Never commit .env to version control

# Anthropic API key for LLM calls
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Model to use (optional, defaults to claude-sonnet-4-20250514)
ANTHROPIC_MODEL=claude-sonnet-4-20250514
# Comma-separated fallback models used when primary is overloaded
ANTHROPIC_FALLBACK_MODELS=claude-opus-4-6

# Serper API key for web search tools (free: 2,500 queries)
# Get yours at: https://serper.dev
SERPER_API_KEY=your_serper_api_key_here

# Deployment environment
APP_ENV=development

# RapidAPI proxy secret for marketplace authentication
RAPIDAPI_PROXY_SECRET=your_rapidapi_proxy_secret_here

# Stripe configuration for billing
# Get keys at: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs (create products in Stripe dashboard)
STRIPE_PRICE_BASIC=price_basic_id
STRIPE_PRICE_PRO=price_pro_id
STRIPE_PRICE_ULTRA=price_ultra_id

# Base URL for redirects
BASE_URL=https://enrichment-api-ttpv.onrender.com

# Redis URL for API key persistence/rate limiting
REDIS_URL=redis://localhost:6379/0

# Reliability tuning (optional)
UPSTREAM_RETRY_AFTER_SECONDS=15
SEARCH_CONTEXT_TIMEOUT_SECONDS=30
LLM_CALL_TIMEOUT_SECONDS=45
ENRICH_TOTAL_TIMEOUT_SECONDS=75
LLM_RETRY_ATTEMPTS=3
SERPER_RETRY_ATTEMPTS=3
CHECKOUT_IDEMPOTENCY_TTL_SECONDS=86400
WEBHOOK_EVENT_TTL_SECONDS=604800
